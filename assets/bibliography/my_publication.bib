@article{li_objective_2021,
	title = {Objective {Assessment} of {Daytime} {Napping} and {Incident} {Heart} {Failure} in 1140 {Community}‐{Dwelling} {Older} {Adults}: {A} {Prospective}, {Observational} {Cohort} {Study}},
