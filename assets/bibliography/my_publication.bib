	number = {9},
	journal = {Psychological Medicine},
	author = {Knapen, Stefan E. and Li, Peng and Riemersma-van der Lek, Rixt F. and Verkooijen, Sanne and Boks, Marco P. M. and Schoevers, Robert A. and Scheer, Frank A. J. L. and Hu, Kun},
